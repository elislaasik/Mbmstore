<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/css/*.min.css" />
    <link href="~/lib/bootstrap/css/custom.css" rel="stylesheet" />
    <link rel="stylesheet" asp-href-include="/lib/font-awesome/css/*.css" />
    <title>MbmStore Catalogue</title>
</head>
<body class="container">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">MusicBookMovie Store</a>
        <div class="col-4 text-right">
            @await Component.InvokeAsync("CartSummary")
        </div>
    </nav>

        <div class="row panel">
            <div id="categories" class="col-3">
                @await Component.InvokeAsync("NavigationMenu")
            </div>
            <div class="col-9">
                @RenderBody()
            </div>
        </div>
</body>
</html>